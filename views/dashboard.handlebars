<div class="row">
  <div class="col-md-12 mt-4">
    <div class="card card-body">
      
      <div class="row">
        <div style="width: 150px;height: 150px;margin: 8px 18px;">
          <img src="{{user.profileImage}}" alt="Profile Image" class="img-fluid rounded">
        </div>
        <div class="col-md-8">
          <h4>User details</h4>
          <p class="text-muted">Username: <strong>{{user.username}}</strong></p>
          <small>Email: <strong>{{user.email}}</strong></small>    
          <div class="mt-3">
            <a href="/user/signout" class="btn btn-large btn-outline-danger">Logout</a>
          </div>
        </div>
      </div>

    </div>    
  </div>
</div>

<div class="row mt-3">
  {{!-- col-md-6 --}}
  {{> _github.dashboard}}

  <div class="col-md-6">
    <div class="jumbotron">
      <p class="lead">Edit account details</p>
      
      <div class="card card-body shadow">
        <form>
          <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" name="username" type="text" value="{{user.username}}">
          </div>
          <div class="form-group">
            <label for="email">Email Address</label>          
            <input class="form-control" name="email" type="email" value="{{user.email}}">
          </div>

        </form>
      </div>

    </div>
  </div>
</div>